<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Factions Expanded - Tribals</li>
    </mods>
    <match Class="PatchOperationRemove">
      <success>Always</success>
      <xpath>Defs/ThingDef[defName="VFE_PlanterBox" or defName="VFE_PlanterBox_Tilable"]/researchPrerequisites/li[text()="VFET_Cultivation"]</xpath>
    </match>
  </Operation>
  
  <Operation Class="PatchOperationReplace">
    <success>Always</success>
    <xpath>Defs/ThingDef[defName="VFE_PlanterBox"]/designationCategory</xpath>
    <value>
      <designationCategory>Ferny_Farming</designationCategory>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <success>Always</success>
    <xpath>Defs/ThingDef[defName="VFE_Ecosystem"]/designationCategory</xpath>
    <value>
      <designationCategory>Ferny_Farming</designationCategory>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <success>Always</success>
    <xpath>Defs/ThingDef[@Name="VFE_TilableHydroponics_Base"]/designationCategory</xpath>
    <value>
      <designationCategory>Ferny_Farming</designationCategory>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <success>Always</success>
    <xpath>Defs/ThingDef[defName="VFE_Scarecrow"]/designationCategory</xpath>
    <value>
      <designationCategory>Ferny_Farming</designationCategory>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <success>Always</success>
    <xpath>Defs/ThingDef[defName="VFE_Sprinkler"]/designationCategory</xpath>
    <value>
      <designationCategory>Ferny_Farming</designationCategory>
    </value>
  </Operation>
  
</Patch>